<!DOCTYPE html>
<html>
  <head>
    <title>
      PM Tool
    </title>
    <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css" />
  </head>

  <body>
    <form action="{{process.env.HOST}}/users/login" method="post">
      {{>header}}
      <h2>Login</h2>
      <div class="input-field">
          <input type="email" name="email" id="email" placeholder="Enter email">
      </div>
      <div class="input-field">
          <input type="password" name="password" id="password" placeholder="Enter Password">
      </div>
      <input type="submit" value="LogIn">

      <br>
      <a href="{{process.env.HOST}}/users/signup">Not Registered? Signup Here</a>
      <br>
      <a href="{{process.env.HOST}}/users/forgotPassword">Forgot Password</a>
    </form>
  </body>
</html>
